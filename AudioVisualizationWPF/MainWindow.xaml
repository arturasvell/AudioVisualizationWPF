<Window x:Class="AudioVisualizationWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioVisualizationWPF"
        mc:Ignorable="d"
        Title="Audio Analyzer" Height="1200" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>

            <ColumnDefinition Width="Auto" MinWidth="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtFilePath" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Margin="5"/>
        <Button x:Name="btnBrowseFile" Grid.Column="5" Grid.Row="0" Click="btnBrowseFile_Click" Content="Browse File" Margin="5"/>
        <WpfPlot Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6" x:Name="mainPlot" MouseDoubleClick="mainPlot_MouseDoubleClick"/>
        <WpfPlot Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="6" x:Name="mainPlot2" MouseDoubleClick="mainPlot2_MouseDoubleClick"/>
        <Grid Grid.Row="3" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Find segments with min value:" Grid.Row="0" Grid.Column="0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="txtEnergyMinValue" Grid.Row="1" Margin="5"/>
            <Button x:Name="btnFindSegments" Grid.Row="2" Margin="5" Content="Find Segments" Click="btnFindSegments_Click"/>
        </Grid>

        <WpfPlot Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="5" x:Name="mainPlot3"/>
        <Grid Grid.Row="4" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Find segments with min value:" Grid.Row="0" Grid.Column="0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="txtFindZCRSegments" Grid.Row="1" Margin="5"/>
            <Button x:Name="btnFindZCRSegments" Grid.Row="2" Margin="5" Content="Find Segments" Click="btnFindZCRSegments_Click"/>
        </Grid>
        <WpfPlot Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="5" x:Name="mainPlot4"/>
        <Grid Grid.Row="5" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="From:" Grid.Row="1" Grid.Column="0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="txtFrom" Grid.Row="2" Margin="5"/>
            <TextBlock Text="To:" Grid.Row="3" Grid.Column="0" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center"/>
            <TextBox x:Name="txtTo" Grid.Row="4" Margin="5"/>
            <Button x:Name="btnGetAudioFragment" Grid.Row="5" Margin="5" Content="Find Segments" Click="btnGetAudioFragment_Click"/>
        </Grid>
        <Grid Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <WpfPlot Grid.Row="0" x:Name="mainPlot5"/>
            <WpfPlot Grid.Row="1" x:Name="mainPlot6"/>
        </Grid>
        
        <TextBox x:Name="txtTimeMarker" Grid.Column="0" Grid.Row="6" MinWidth="100" Margin="5"/>
        <ComboBox x:Name="cmbUnits" Grid.Column="1" Grid.Row="6" Margin="5" MinWidth="50">
            <ComboBoxItem Content="s"/>
            <ComboBoxItem Content="ms"/>
            <ComboBoxItem Content="min"/>
        </ComboBox>
        <Button x:Name="btnPlaceMarker" Grid.Column="2" Grid.Row="6" MinWidth="100" Content="Place Marker" Margin="5" Click="btnPlaceMarker_Click"/>
        <Grid Grid.Column="4" Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnPlayAudioLeft" Grid.Column="0" Content="Play Audio" Margin="5" Click="btnPlayAudio_Click"/>
            <StackPanel Orientation="Vertical" Grid.Column="1" Margin="5">
                <TextBlock Text="Echo coefficient:"/>
                <TextBox x:Name="txtEchoCoef"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="2" Margin="5">
                <TextBlock Text="Delta coefficient:"/>
                <TextBox x:Name="txtDeltaDistance"/>
            </StackPanel>
            <Button x:Name="btnAddEcho" Grid.Column="3" Click="btnAddEcho_Click" Content="Add Echo" Margin="5"/>
        </Grid>

        <Button x:Name="btnPlotAudio" Grid.Column="5" Grid.Row="6" Click="btnPlotAudio_Click" Content="Plot Audio" Margin="5"/>

    </Grid>
</Window>
